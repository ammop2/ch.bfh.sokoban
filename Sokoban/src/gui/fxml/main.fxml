<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.Main">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <Button text="Select a Map" textFill="#420197" underline="true" onAction="#loadMap" />
            </children>
        </StackPane>
    </center>
   <top>
      <FlowPane BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="myMenuBar">
              <menus>
                <Menu mnemonicParsing="false" text="Play">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Select Map" onAction="#loadMap" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editor">
                  <items>
                    <MenuItem mnemonicParsing="false" text="New Map" onAction="#newMap"/>
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Solver">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Select Map" onAction="#solveMap"/>
                      </items>
                  </Menu>
              </menus>
            </MenuBar>
         </children>
      </FlowPane>
   </top>
</BorderPane>
